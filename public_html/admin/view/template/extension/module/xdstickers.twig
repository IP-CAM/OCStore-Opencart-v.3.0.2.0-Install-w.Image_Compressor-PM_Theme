		<div class="container-fluid">
			<div class="pull-right">
				<button onclick="$('#xdstickers_apply').attr('value','1'); $('#form-xdstickers').submit();" data-toggle="tooltip" title="{{ button_apply }}" class="btn btn-success"><i class="fa fa-save"></i></button>
				<button type="submit" form="form-xdstickers" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
				<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
			</div>
			<h1 style="display:block;">{{ heading_title }}</h1>
			<ul class="breadcrumb">
				{% for breadcrumb in breadcrumbs %}
				<li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb.text }}</a></li>
				{% endfor %}
			</ul>
		</div>
	</div>
	<div id="xdstickers_block" class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
			</div>
		<div class="panel-body">
			<ul class="nav nav-tabs">
				<li class="active"><a data-toggle="tab" href="#tab_settings">{{ text_tab_settings }}</a></li>
				<li><a data-toggle="tab" href="#tab_auto_stickers">{{ text_tab_auto_stickers }}</a></li>
				<li><a data-toggle="tab" href="#tab_custom">{{ text_tab_custom }}</a></li>
				<li><a data-toggle="tab" href="#tab_bulk_custom">{{ text_tab_bulk_custom }}</a></li>
				<li><a data-toggle="tab" href="#tab_help">{{ text_tab_help }}</a></li>
			</ul>
			<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-xdstickers" class="form-horizontal">
				<input type="hidden" name="xdstickers_apply" value="" id="xdstickers_apply" class="form-control" />
				<div class="tab-content">
					<div class="tab-pane active" id="tab_settings">
