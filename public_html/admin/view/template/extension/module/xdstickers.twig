										<textarea name="xdstickers[inline_styles]" rows="4" style="width:100%">{{ xdstickers.inline_styles }}</textarea>
										<p class="text-warning"><i class="fa fa-info-circle" aria-hidden="true"></i> {{ xdstickers_styles_help }}</p>
