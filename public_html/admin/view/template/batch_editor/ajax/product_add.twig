<form id="productAdd">
 <table class="be-form">
  <tr>
   <td>{{ text_image }}</td>
   <td>
    <div class="image" style="width:100px;">
     <img alt="{{ text_edit }}" title="{{ text_edit }}" /><br />
     <input name="product[image]" data-table="product" data-field="image" data-product_id="0" type="hidden" />
     <a class="btn btn-success btn-xs" onclick="getImageManager(this)" title="{{ text_path }}"><i class="fa fa-upload"></i></a>&nbsp;<a class="btn btn-danger btn-xs" title="{{ text_clear }}" onclick="$(this).parent().find('img, input').prop({'src':no_image, 'value':''});"><i class="fa fa-trash-o"></i></a>
    </div>
   </td>
  </tr>
  <tr>
   <td>{{ text_name }} <span class="be-required">*</span></td>
   <td>
    {% for language in languages %}
    <input name="product[name][{{ language['language_id'] }}]" type="text" value="" />
    <img src="language/{{ language['code'] }}/{{ language['code'] }}.png" alt="{{ language['name'] }}" title="{{ language['name'] }}" />&nbsp;&nbsp;
    {% endfor %}
   </td>
  </tr>
  <tr>
   <td>{{ text_model }} <span class="be-required">*</span></td>
   <td><input name="product[model]" type="text" value="" /></td>
  </tr>
  <tr>
   <td>{{ text_price }}</td>
   <td><input name="product[price]" type="text" value="" /></td>
  </tr>
  <tr>
   <td>{{ text_manufacturer_id }}</td>
   <td>
    <select name="product[manufacturer_id]">
     <option value="0">{{ text_none }}</option>
     {% for manufacturer in manufacturers %}
     <option value="{{ manufacturer['manufacturer_id'] }}">{{ manufacturer['name'] }}</option>
     {% endfor %}
    </select>
   </td>
  </tr>
  <tr>
   <td>{{ text_tax_class_id }}</td>
   <td>
    <select name="product[tax_class_id]">
     <option value="0">{{ text_none }}</option>
     {% for tax_class in tax_classes %}
     <option value="{{ tax_class['tax_class_id'] }}">{{ tax_class['name'] }}</option>
     {% endfor %}
    </select>
   </td>
  </tr>
  <tr>
   <td>{{ text_stock_status_id }}</td>
   <td>
    <select name="product[stock_status_id]">
     {% for stock_status in stock_statuses %}
     <option value="{{ stock_status['stock_status_id'] }}">{{ stock_status['name'] }}</option>
     {% endfor %}
    </select>
   </td>
  </tr>
  <tr>
   <td>{{ text_weight_class_id }}</td>
   <td>
    <select name="product[weight_class_id]">
     {% for weight_class in weight_classes %}
     <option value="{{ weight_class['weight_class_id'] }}">{{ weight_class['name'] }}</option>
     {% endfor %}
    </select>
   </td>
  </tr>
  <tr>
   <td>{{ text_length_class_id }}</td>
   <td>
    <select name="product[length_class_id]">
     {% for length_class in length_classes %}
     <option value="{{ length_class['length_class_id'] }}">{{ length_class['name'] }}</option>
     {% endfor %}
    </select>
   </td>
  </tr>
 </table>
</form>
<table class="be-list">
 <tfoot>
  <tr>
   <td class="center">
    <a class="btn btn-success" onclick="productAddCopyDelete('add');">{{ button_insert }}</a>
    <a class="btn btn-danger" onclick="$('#dialogLink').modal('hide');">&times;</a>
   </td>
  </tr>
 </tfoot>
</table>
<script type="text/javascript"><!--
$('#productAdd .image img').attr('src', no_image);
$('#dialogLink').find('.modal-header').append('{{ text_product_add }}');
//--></script>