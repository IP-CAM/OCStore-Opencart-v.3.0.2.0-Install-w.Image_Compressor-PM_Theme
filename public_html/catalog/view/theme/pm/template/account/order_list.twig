{{ header }}
<div class="page__wrapper">

  <nav class="breadcrumbs page__breadcrumbs" aria-label="Дополнительная навигация">
    <ol class="breadcrumbs__list">
      {% for key, breadcrumb in breadcrumbs %}
        <li class="breadcrumbs__item">
          {% if key + 1 < breadcrumbs|length %}
            <a class="breadcrumbs__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
          {% else %}
            <a class="breadcrumbs__link" href="{{ breadcrumb.href }}" aria-current="page">{{ breadcrumb.text }}</a>
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>

  <main class="main page-account">

    <div class="order-list">
      <h1 class="title title--1 page-account__title">История заказов</h1>

      {% if orders %}
        <div class="table__responsive-container">
          <table class="table">
            <thead>
              <tr>
                <th class="table__cell table__cell--th">{{ column_order_id }}</th>
                <th class="table__cell table__cell--th">{{ column_customer }}</th>
                <th class="table__cell table__cell--th">{{ column_product }}</th>
                <th class="table__cell table__cell--th">{{ column_status }}</th>
                <th class="table__cell table__cell--th">{{ column_total }}</th>
                <th class="table__cell table__cell--th">{{ column_date_added }}</th>
                <th class="table__cell table__cell--th"></th>
              </tr>
            </thead>
            <tbody>
            {% for order in orders %}
              <tr>
                <td class="table__cell">#{{ order.order_id }}</td>
                <td class="table__cell">{{ order.name }}</td>
                <td class="table__cell">{{ order.products }}</td>
                <td class="table__cell">{{ order.status }}</td>
                <td class="table__cell">{{ order.total }}</td>
                <td class="table__cell">{{ order.date_added }}</td>
                <td class="table__cell"><a class="link" href="{{ order.view }}">{{ button_view }}</a></td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>

        <a class="link order-list__back-link" href="{{ continue }}">« назад</a>
      {% else %}
        <div>{{ text_empty }}</div>
      {% endif %}

    </div>

    <div class="page-account__column-left">
      {{ column_left }}
    </div>

    {{ column_right }}
    {{ content_top }}
    {{ content_bottom }}

  </main>
</div>
{{ footer }}

