        {% endif %}
      </span>
    </label>
  {% else %}
    <label class="radiocheck filter__radio" data-option-id="{{ option.option_id }}" data-option-value-id="{{ value.id }}">
      <input class="radiocheck__input visually-hidden" type="radio" name="ocf[{{ option.option_id }}]" autocomplete="off">
      <span class="radiocheck__box radiocheck__box--radio"></span>
