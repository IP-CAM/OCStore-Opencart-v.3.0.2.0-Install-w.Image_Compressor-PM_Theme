{% if value.selected %}
  {# checked #}
  {% if option.type == 'checkbox' %}
    <label class="radiocheck filter__checkbox filter__checkbox--selected" data-option-id="{{ option.option_id }}" data-option-value-id="{{ value.id }}">
      <input class="radiocheck__input visually-hidden" type="checkbox" checked autocomplete="off">
      <span class="radiocheck__box radiocheck__box--check"></span>
      <span class="radiocheck__caption">
        {{ value.name }}
        {% if show_counter %}
          <span class="filter__product-count" aria-label="Количество вариантов">
            {% if value.count %}
              {{ value.count }}
            {% else %}
              0
            {% endif %}
          </span>
        {% endif %}
      </span>
    </label>
  {% else %}
    <label class="radiocheck filter__radio filter__radio--selected" data-option-id="{{ option.option_id }}" data-option-value-id="{{ value.id }}">
      <input class="radiocheck__input visually-hidden" type="radio" name="ocf[{{ option.option_id }}]" checked autocomplete="off">
      <span class="radiocheck__box radiocheck__box--radio"></span>
      <span class="radiocheck__caption">
        {{ value.name }}
        {% if show_counter %}
          <span class="filter__product-count" aria-label="Количество вариантов">
            {% if value.count %}
              {{ value.count }}
            {% else %}
              0
            {% endif %}
          </span>
        {% endif %}
      </span>
    </label>
  {% endif %}


{% else %}
  {# not checked #}
  {% if option.type == 'checkbox' %}
    <label class="radiocheck filter__checkbox" data-option-id="{{ option.option_id }}" data-option-value-id="{{ value.id }}">
